pipeline {
  agent any

  tools {
    jdk   'Temurin 21'        // имя как в Manage Jenkins → Tools
    maven 'Maven 3.9.x'       // имя как в Tools
  }

  options { timestamps(); ansiColor('xterm') }

  stages {
    stage('Checkout') {
      steps {
        // если репозиторий один и папка в нём api_skillcheker00 — просто забираем весь репо
        git url: 'https://github.com/<your-user>/<your-repo>.git', branch: 'main'
        // если репо приватный — добавь credentialsId:
        // git branch: 'main', credentialsId: 'github_token', url: 'https://github.com/...'
      }
    }

    stage('Build') {
      steps {
        dir('api_skillcheker00') {
          bat 'mvn -B -DskipTests clean package'
        }
      }
    }

    stage('Test') {
      steps {
        dir('api_skillcheker00') {
          bat 'mvn -B test'
        }
      }
      post {
        always {
          // отчёты JUnit (путь проверь: surefire или failsafe)
          junit 'api_skillcheker00/target/surefire-reports/*.xml'
          // если используешь Allure:
          // allure([
          //   includeProperties: false,
          //   results: [[path: 'api_skillcheker00/target/allure-results']]
          // ])
        }
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'api_skillcheker00/target/**/*', fingerprint: true
    }
  }
}