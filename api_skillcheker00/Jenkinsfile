pipeline {
  agent any

  tools {
    maven 'Maven 3.9.8'
  }

  options { timestamps() }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/koherasymets/skillchecker-api-tests.git', branch: 'main'
      }
    }

    stage('Build') {
      steps {
        dir('api_skillcheker00') {
          script {
            if (isUnix()) { sh 'mvn -B -DskipTests clean package' }
            else { bat 'mvn -B -DskipTests clean package' }
          }
        }
      }
    }

    stage('Test') {
      steps {
        dir('api_skillcheker00') {
          script {
            if (isUnix()) { sh 'mvn -B test' }
            else { bat 'mvn -B test' }
          }
        }
      }
      post {
        always {
          junit 'api_skillcheker00/target/surefire-reports/*.xml'
        }
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'api_skillcheker00/target/**/*', fingerprint: true
    }
  }
}