pipeline {
  agent { label 'aws-ec2' }
  options { timestamps() }

  stages {
    stage('Build') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B -DskipTests clean package'
        }
      }
    }
    stage('Test') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B test'
        }
      }
    }
  }

  post {
    always {
      junit 'api_skillcheker00/target/surefire-reports/*.xml'
      dir('api_skillcheker00') {
        sh 'mvn -B -q surefire-report:report || true'
      }
      publishHTML(target: [
        reportDir: 'api_skillcheker00/target/site',
        reportFiles: 'surefire-report.html',
        reportName: 'Surefire Report',
        allowMissing: true,
        keepAll: true,
        alwaysLinkToLastBuild: true
      ])
      script {
        if (fileExists('api_skillcheker00/target/allure-results')) {
          allure results: [[path: 'api_skillcheker00/target/allure-results']], reportBuildPolicy: 'ALWAYS'
        }
      }
      archiveArtifacts artifacts: 'api_skillcheker00/target/**', fingerprint: true, allowEmptyArchive: true
    }
  }
}