pipeline {
  agent { label 'aws-ec2' }
  options { timestamps() }

  stages {
    stage('Build') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B -DskipTests clean package'
        }
      }
    }

    stage('Test') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B test'
        }
      }
    }
  }

  post {
    always {
      // JUnit-отчёты
      junit 'api_skillcheker00/target/surefire-reports/*.xml'
      // Артефакты на всякий случай
      archiveArtifacts artifacts: 'api_skillcheker00/target/**', fingerprint: true
    }
  }
}