pipeline {
  agent { label 'aws-ec2' }
  options {
    timestamps()
    skipDefaultCheckout(true)
  }

  stages {
    stage('Cleanup workspace') {
      steps {
        deleteDir()
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Test') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B test'
        }
      }
    }

    stage('Report (HTML)') {
      steps {
        dir('api_skillcheker00') {
          sh 'mvn -B -q surefire-report:report'
        }
        publishHTML target: [
          allowMissing: false,
          alwaysLinkToLastBuild: true,
          keepAll: true,
          reportDir: 'api_skillcheker00/target/site',
          reportFiles: 'surefire-report.html',
          reportName: 'Surefire Report'
        ]
      }
    }
  }

  post {
    always {
      junit 'api_skillcheker00/target/surefire-reports/*.xml'

      script {
        if (fileExists('api_skillcheker00/target/allure-results')) {
          allure includeProperties: false,
                 jdk: '',
                 reportBuildPolicy: 'ALWAYS',
                 results: [[path: 'api_skillcheker00/target/allure-results']]
        }
      }

      archiveArtifacts artifacts: 'api_skillcheker00/target/**', fingerprint: true
    }
  }
}